<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#8c8f67"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp" >

<LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
      android:orientation="vertical">

    <!-- Name Label -->
<TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add a client"
        android:textColor="@color/white"
        android:textSize="25dip" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="Email"
        android:textColor="@color/white"
        android:textSize="14dip" />

    <!-- Input Name -->

    <EditText
        android:id="@+id/inputClientEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
     	android:background="@color/white"
        android:layout_marginBottom="15dip"
        android:singleLine="true" />

    
    <!-- Price Label -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:textColor="@color/white"      
        android:text="Give your client a Password"
        android:textSize="14dip" />

    <!-- Input Price -->

    <EditText
        android:id="@+id/inputClientPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@color/white"
        android:layout_marginBottom="15dip"
         android:singleLine="true" />

    <!-- Description Label -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:textColor="@color/white"        
        android:text="Is this a current Client?(Yes or No)"
        android:textSize="14dip" />

    <!-- Input description -->

    <EditText
        android:id="@+id/inputCurrentClient"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_marginBottom="15dip"
         android:inputType="text"
         android:background="@color/white"
        
         android:gravity="top"
        android:lines="4" />
    
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="Full Name"
        android:textColor="@color/white"
        
        android:textSize="17dip" />

    <!-- Input description -->

    <EditText
        android:id="@+id/inputClientFullname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_marginBottom="15dip"
         android:inputType="text"
         android:gravity="top"
        android:background="@color/white"
        android:lines="4" />
    
    
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="Address"
        android:textColor="@color/white"
        android:textSize="17dip" />

    <!-- Input description -->

    <EditText
        android:id="@+id/inputClientAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_marginBottom="15dip"
         android:inputType="text"
         android:gravity="top"
        android:background="@color/white"

        android:lines="4" />

        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
         android:textColor="@color/white"

        android:text="client age?"
        android:textSize="17dip" />

    <!-- Input description -->

    <EditText
        android:id="@+id/inputClientGender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_marginBottom="15dip"
         android:inputType="text"
         android:gravity="top"
   		 android:background="@color/white"
       
        android:lines="4" />
    
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="Client gender"
         android:textColor="@color/white"
        android:textSize="17dip" />
	
    <!-- Input description -->

    <EditText
        android:id="@+id/inputClientAge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_marginBottom="15dip"
         android:inputType="text"
         android:gravity="top"
           android:background="@color/white"
   
        android:lines="4" />
    
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="Client Weight"
         android:textColor="@color/white"
        android:textSize="17dip" />
        
        <EditText
        android:id="@+id/inputClientWeight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_marginBottom="15dip"
        android:inputType="text"
         android:gravity="top"
           android:background="@color/white"
   
         android:lines="4" />
        
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="Client Height"
         android:textColor="@color/white"
 
        android:textSize="17dip" />
         
        <EditText
        android:id="@+id/inputClientHeight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_marginBottom="15dip"
        android:inputType="text"
        android:gravity="top"
           android:background="@color/white"
   
        android:lines="4" />
       
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="Clients Goal"
        android:textColor="@color/white"

        android:textSize="17dip" />
         
        <EditText
        android:id="@+id/inputClientGoal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_marginBottom="15dip"
        android:inputType="text"
        android:gravity="top"
           android:background="@color/white"
   
        android:lines="4" />

          <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:textColor="@color/white"
        android:text="Clients Injuries (optional)"
        android:textSize="17dip" />
         
        <EditText
        android:id="@+id/inputClientInjury"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_marginBottom="15dip"
        android:inputType="text"
        android:gravity="top"
        android:background="@color/white"
  
         android:lines="4" />
       
     
    <!-- Button Create Product -->

    <Button
        android:id="@+id/btnCreateClient"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
              android:textColor="@color/white"
         android:layout_marginTop="40dip"
      
        android:text="Add this Client" />

</LinearLayout>

</ScrollView>